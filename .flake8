[flake8]
max-line-length = 127
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov,
    .mypy_cache

# Error codes to ignore:
# E203: whitespace before ':'
# E501: line too long (handled by black)
# W503: line break before binary operator
# F401: imported but unused (handled by isort)
ignore =
    E203,
    E501,
    W503,
    F401

per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811

count = True
statistics = True
show-source = True
