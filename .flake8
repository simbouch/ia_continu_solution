[flake8]
max-line-length = 127
max-complexity = 10
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov,
    .mypy_cache

ignore =
    E203,
    E501,
    W503,
    F401

per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811

count = True
statistics = True
show-source = True
